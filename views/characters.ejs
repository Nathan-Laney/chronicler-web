<section class="space-y-4">
  <div class="flex items-center justify-between">
    <h1 class="text-xl font-semibold">Characters</h1>
    <a class="px-4 py-2 rounded-xl bg-indigo-600 text-white" href="/characters/new/form">Create Character</a>
  </div>
  <ul class="grid gap-3">
    <% chars.forEach(c => { %>
      <li class="bg-white dark:bg-slate-800 rounded-2xl p-4 shadow-sm dark:shadow-none border border-slate-200 dark:border-slate-700">
        <div class="flex items-center justify-between">
          <div>
            <a href="/characters/<%= c.characterId %>" class="font-semibold text-indigo-600"><%= c.characterName %></a>
            <div class="text-sm text-slate-500">Lvl <%= c.level %> • <%= c.class || 'Unclassed' %></div>
          </div>
          <div class="text-right text-sm text-slate-500"><%= c.experience %> XP • DT <%= c.downtime %></div>
        </div>
      </li>
    <% }) %>
  </ul>
</section>
