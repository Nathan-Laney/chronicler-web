<section class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-xl font-semibold">Summaries</h1>
  </div>

  <ul class="grid gap-3">
    <% (channels || []).forEach(c => { %>
      <li class="bg-white dark:bg-slate-800 rounded-2xl p-4 shadow-sm dark:shadow-none border border-slate-200 dark:border-slate-700">
        <div class="flex items-center justify-between">
          <div>
            <a href="/summaries/<%= c.channelId %>" class="font-semibold text-indigo-600">
              <%= c.channelName %>
            </a>
            <div class="text-sm text-slate-500">
              <%= c.channelId %> â€¢ <%= new Date(c.updatedAt).toLocaleString() %>
            </div>
          </div>
          <div class="text-sm text-slate-500"><%= c.count %> version(s)</div>
        </div>
      </li>
    <% }) %>
  </ul>
</section>
