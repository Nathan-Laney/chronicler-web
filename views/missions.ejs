<section class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-xl font-semibold">Missions</h1>
    <a href="/missions/new/form" class="px-4 py-2 bg-indigo-600 text-white rounded-xl">Create Mission</a>
  </div>

  <ul class="grid gap-3">
    <% missions.forEach(m => { %>
      <li class="bg-white dark:bg-slate-800 rounded-2xl p-4 shadow-sm dark:shadow-none border border-slate-200 dark:border-slate-700">
        <div class="flex items-center justify-between">
          <div>
            <a href="/missions/<%= m.missionId %>" class="font-semibold text-indigo-600"><%= m._displayName || m.missionName %></a>
            <% if ((m._channelLinks||[]).length) { %>
              <a class="ml-2 text-sm text-slate-500 underline" target="_blank" rel="noopener"
                 href="<%= m._channelLinks[0].url %>">Open in Discord</a>
            <% } %>            
            <div class="text-sm text-slate-500"><%= m.missionStatus %></div>
          </div>
          <div class="text-sm text-right text-slate-500 leading-tight">
            <div>GM: <%= m._gmName || m.gmId %></div>
            <div><%= m.players.length %> players</div>
          </div>
        </div>
      </li>
    <% }) %>
  </ul>
</section>
