<section class="bg-white dark:bg-slate-800 rounded-2xl p-4 shadow-sm dark:shadow-none border border-slate-200 dark:border-slate-700">
  <h1 class="text-xl font-semibold mb-4">Create Character</h1>
  <form method="POST" action="/characters/create" class="grid gap-3">
    <input required name="characterName" class="px-3 py-2 border rounded-xl" placeholder="Character name" />
    <input name="class" class="px-3 py-2 border rounded-xl" placeholder="Class (optional)" />
    <button class="px-4 py-2 bg-indigo-600 text-white rounded-xl">Create</button>
  </form>
</section>
