<section class="bg-white dark:bg-grv-surface rounded-2xl p-4 shadow-sm dark:shadow-none border border-slate-200 dark:border-grv-border">
  <h1 class="text-xl font-semibold mb-4">Create Mission</h1>
  <form method="POST" action="/missions/create" class="grid gap-3">
    <input required name="missionName" class="px-3 py-2 border rounded-xl" placeholder="Mission name" />
    <textarea name="description" rows="3" class="px-3 py-2 border rounded-xl" placeholder="Description (optional)"></textarea>
    <button class="px-4 py-2 bg-indigo-600 text-white rounded-xl">Create</button>
  </form>
</section>
